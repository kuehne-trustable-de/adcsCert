			</build>
		</profile>
		<profile>
			<id>codeAnalysis</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.owasp</groupId>
						<artifactId>dependency-check-maven</artifactId>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
