					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

	<modules>
		<module>certcli</module>
		<module>certenrol</module>
		<module>certadmin</module>
		<module>adcsCertUtil</module>
		<module>adcsProxy</module>
		<module>adcsProxyClient</module>
	</modules>
	
</project>
